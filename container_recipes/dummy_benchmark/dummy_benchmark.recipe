Bootstrap: docker
From: continuumio/anaconda3

%startscript
    flask run

%environment
    export FLASK_APP=smacbenchmarking/container/container_app.py

%files
    . /benchmarking

%post
    apt update -y
    apt upgrade -y
    apt install curl -y
    apt install wget -y
    apt install git -y
    apt install gcc -y
    apt install build-essential -y
    apt install clang -y
    . /opt/conda/etc/profile.d/conda.sh

   pip install wheel
   pip install -r benchmarking/requirements.txt
   pip install ../benchmarking
   pip install -r benchmarking/container_recipes/general_requirements_container_problem.txt

   # benchmark-specific commands go here
   pip install -r benchmarking/container_recipes/dummy_benchmark/dummy_benchmark_requirements.txt

   echo "Successfully installed all features"