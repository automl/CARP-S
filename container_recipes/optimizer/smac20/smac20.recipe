Bootstrap: docker
From: continuumio/miniconda3

%files
    ./smacbenchmarking /benchmarking/smacbenchmarking
    ./container_recipes /benchmarking/container_recipes
    requirements.txt /benchmarking/requirements.txt
    setup.py /benchmarking/setup.py
    README.md /benchmarking/README.md

%post
    apt update -y
    apt upgrade -y
    apt install curl -y
    apt install wget -y
    apt install git -y
    apt install gcc -y
    apt install build-essential -y
    apt install clang -y

    pip install swig
    pip install wheel
    pip install -r /benchmarking/requirements.txt
    pip install /benchmarking
    pip install -r /benchmarking/container_recipes/general_requirements_container_optimizer.txt

    # benchmark-specific commands go here
    pip install -r /benchmarking/container_recipes/optimizer/smac20/smac20_requirements.txt

    echo "Successfully installed all features"
