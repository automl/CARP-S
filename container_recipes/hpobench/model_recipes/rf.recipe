Bootstrap: docker
From: python:3.8-slim

%labels
VERSION v0.0.1

%post
    apt update -y \
    && apt install build-essential git -y \
    && cd /home \
    && git clone https://github.com/automl/HPOBench.git \
    && cd HPOBench \
    && git checkout master \
    && pip install ".[ml_mfbb]" \
    && pip install configspace==0.6.1 \
    && cd / \
    && mkdir /var/lib/hpobench/ \
    && chmod -R 777 /var/lib/hpobench/ \
    && pip cache purge \
    && rm -rf /var/lib/apt/lists/*


%runscript
    python -s /home/HPOBench/hpobench/container/server_abstract_benchmark.py ml.rf_benchmark $@
